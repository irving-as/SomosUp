@using AcopioUP.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/SimpleContent/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a href="/home" class="navbar-brand"><img src="/Content/Images/logo.png" height="25" alt="Universidad Panamericana" /></a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        @*@Html.ActionLink("Acopio Up", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
        <div class="navbar-collapse collapse">
            <ul class="navbar-nav mr-auto">
                @Html.Partial("_NavBarList")
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="footer">
            <div class="container">
                <div class="row bort">
                    <div class="copyright">
                        © Copyright <a href="http://up.edu.mx">Universidad Panamericana</a>. Todos los derechos reservados.
                    </div>

                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)
</body>
</html>
