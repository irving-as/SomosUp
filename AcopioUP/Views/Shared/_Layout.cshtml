@using AcopioUP.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="site-wrapper">

    <div class="site-wrapper-inner">

        <div class="cover-container">

            <div class="masthead clearfix">
                <div class="inner">
                    <a href="/home" class="masthead-brand"><img src="/Content/Images/logo.png" alt="Universidad Panamericana" width="200" /></a>
                    <nav>
                        <ul class="nav masthead-nav">
                            <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                            <li>@Html.ActionLink("Donar", "Index", "Products")</li>
                            @if (User.IsInRole(RoleNames.CanManageVictims))
                            {
                                <li>@Html.ActionLink("Damnificados", "Index", "Victims")</li>
                            }
                            <li>@Html.ActionLink("Info", "About", "Home")</li>
                            <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>

            @RenderBody()

            <div class="mastfoot">
                <div class="inner">
                    <p>© Copyright <a href="http://up.edu.mx">Universidad Panamericana</a>. Todos los derechos reservados.</p>
                </div>
            </div>

        </div>

    </div>

</div>

@Scripts.Render("~/bundles/lib")
@RenderSection("scripts", required: false)
</body>
</html>
